# Development image with full development dependencies
FROM node:20-alpine

# Install dependencies in a single layer
RUN apk add --no-cache \
    git \
    curl \
    openssl \
    openssl-dev \
    netcat-openbsd \
    && apk add --no-cache --repository http://dl-cdn.alpinelinux.org/alpine/v3.14/main libssl1.1
    libc6-compat

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/

# Install dependencies efficiently
RUN npm install --no-audit --prefer-offline && \
    cd server && \
    npm install --no-audit --prefer-offline && \
    cd ../client && npm install --no-audit --prefer-offline

# Copy source code
COPY . .

# Generate Prisma client in server context
WORKDIR /app/server
RUN npx prisma generate

# Back to app root
WORKDIR /app

# Set permissions for entrypoint
COPY dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

EXPOSE 3000 5173 