# Development image with full development dependencies
FROM node:18-alpine

# Install development tools and OpenSSL
RUN apk add --no-cache git curl openssl openssl-dev netcat-openbsd

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/

# Install root dependencies
RUN npm install

# Install server dependencies including Prisma
WORKDIR /app/server
RUN npm install
RUN npx prisma generate

# Install client dependencies
WORKDIR /app/client
RUN npm install

# Back to app root
WORKDIR /app

# Copy source code
COPY . .

# Development startup script
COPY dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

EXPOSE 3000 5173 