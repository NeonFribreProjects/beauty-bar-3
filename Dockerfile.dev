# Development image with full development dependencies
FROM node:18-alpine

# Install dependencies in a single layer
RUN apk add --no-cache git curl openssl openssl-dev netcat-openbsd

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/

# Install root dependencies
RUN npm install --no-audit --prefer-offline

# Install server dependencies and generate Prisma
WORKDIR /app/server
RUN npm install --no-audit --prefer-offline && \
    npm install @prisma/client

# Install client dependencies
WORKDIR /app/client
RUN npm install --no-audit --prefer-offline

# Copy source code
WORKDIR /app
COPY . .

# Generate Prisma client in the correct context
WORKDIR /app/server
RUN npx prisma generate

# Back to app root
WORKDIR /app

# Set permissions for entrypoint
COPY dev-entrypoint.sh /usr/local/bin/
RUN chmod +x /usr/local/bin/dev-entrypoint.sh

EXPOSE 3000 5173 