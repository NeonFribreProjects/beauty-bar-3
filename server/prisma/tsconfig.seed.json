{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "types": ["node"],
    "typeRoots": ["../node_modules/@types/node"]
  },
  "include": ["seed.ts"],
  "exclude": [
    "node_modules",
    "../node_modules",
    "**/*.test.ts"
  ]
} 